(. -> . -> .,
  Value
    (non_rec, 'f', [ ], [ ('n', Type ('Z')); ('b', Type ('bool')) ],
      Some Type ('Z')) =
    IfThenElse
      ((?, Effect ([ ], .)), Variable ((?, Effect ([ ], .)), 'b'),
        Apply
          ((?, Effect ([ ], .)),
            Apply
              ((?, Effect ([ ], .)), Variable ((?, Effect ([ ], .)), 'Z.add'),
                Variable ((?, Effect ([ ], .)), 'n')),
            Constant ((?, Effect ([ ], .)), Int(1))),
        Apply
          ((?, Effect ([ ], .)),
            Apply
              ((?, Effect ([ ], .)), Variable ((?, Effect ([ ], .)), 'Z.sub'),
                Variable ((?, Effect ([ ], .)), 'n')),
            Constant ((?, Effect ([ ], .)), Int(1)))))
